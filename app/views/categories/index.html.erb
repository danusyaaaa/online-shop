  <div class="container">
  <%=link_to t("categories.new"),new_category_path,class:"btn btn-outline-secondary"%><br>
<br>
<table class="table table-white">
    <tr>
      <th> <%="название"%></th>

      <th scope="col"><%="изменения"%></th>
    </tr>
    <% for category  in @categories%>
    <tr>
      <td><%=link_to category.name,category_path(category),class:"text-dark"%></td>
      <td><%=link_to "редактировать",edit_category_path(category),class:"btn btn-outline-danger"%>

        <%=link_to "удалить",category_path(category),method: :delete, data: { confirm: "Are you sure ?"} ,class:"btn btn-outline-danger"%>
      </td>
    </tr>
    <%end%>
</table>
</div>